1.configure
git config --global user.name "Your Name"
git config --global user.email "email@example.com"

2.make repository
mkdir repository
cd repository
git init

3.add
git add filename

4.commit
git commit -m "Message"

5.status
git status

6.diff
git diff filename

7.back-to
git log
git reset --hard HEAD^
git reset --hard <commit id>

8.history
git reflog

9.back-to 
git checkout --file
git reset HEAD file

10.delete
git rm filename
git commit -m "Message"

11.telnet
ssh-keygen -t rsa -C "email"
git remote add origin git@github.com:P-YChen/repositoryname.git
git push origin master
git push -u origin master(first time)

12.clone
git clone git@github.com:P-YChen/repositoryname.git

13.branch
git branch branch_name
git checkout branch_name

git checkout -b branch_name
git branch -d branch_name
git branch -D branch_name

git merge branch_name

git --graph --pretty=oneline --abbrev-commit

14.save
git stash
git stash list

git stash apply
git stash drop
git stash pop
